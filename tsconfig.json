{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "Node",
		"lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"]
		},
		"types": ["@types/node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
